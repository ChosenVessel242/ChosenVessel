--- LOGIC & ENGINE ---
local active = false
local canGrab = true
local lastGrabTime = 0

local function performGrab()
    local char = Player.Character
    if not char then return end
    local tool = char:FindFirstChildOfClass("Tool")
    if tool then tool:Activate() end
    
    local center = Camera.ViewportSize / 2
    VU:CaptureController()
    VU:Button1Down(center)
    task.wait(0.01)
    VU:Button1Up(center)
end

-- OPTIMIZED DETECTION: Instant grab when delay is 0, otherwise use accumulator
local accumulatedTime = 0
local lastFrameTime = os.clock()

RunService.PostSimulation:Connect(function()
    if not active then 
        accumulatedTime = 0
        return 
    end
    
    local currentTime = os.clock()
    local deltaTime = currentTime - lastFrameTime
    lastFrameTime = currentTime
    
    -- Check cooldown
    if not canGrab then return end
    
    local range = tonumber(RangeInput.Text) or 20
    local viewportRay = Camera:ViewportPointToRay(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)
    
    local params = RaycastParams.new()
    params.FilterType = Enum.RaycastFilterType.Exclude
    params.FilterDescendantsInstances = {Player.Character}
    
    -- Prioritize Spherecast for center detection (more reliable)
    local sphereResult = workspace:Spherecast(viewportRay.Origin, 0.2, viewportRay.Direction * range, params)
    local rayResult = workspace:Raycast(viewportRay.Origin, viewportRay.Direction * range, params)
    
    local result = sphereResult or rayResult
    local found = false
    
    if result and result.Instance then
        local hit = result.Instance
        
        -- Strict Pallet Filter
        if not (hit.Name:lower():find("pallet") or (hit.Parent and hit.Parent.Name:lower():find("pallet"))) then
            local model = hit:FindFirstAncestorOfClass("Model")
            
            -- Check for Humanoid (Exact target)
            if model and model:FindFirstChildOfClass("Humanoid") then
                if model.Humanoid.Health > 0 then
                    found = true
                end
            -- Check for Physical Objects (If Mode is All)
            elseif TargetMode == "All" and hit:IsA("BasePart") and not hit.Anchored then
                found = true
            end
        end
    end
    
    if found then
        local delayTime = tonumber(ReactionInput.Text) or 0
        
        -- INSTANT GRAB when delay is 0
        if delayTime <= 0 then
            canGrab = false
            performGrab()
            lastGrabTime = currentTime
            task.delay(tonumber(LockInput.Text) or 1.2, function()
                canGrab = true
            end)
            accumulatedTime = 0
        else
            -- Accumulate time for delays > 0
            accumulatedTime = accumulatedTime + deltaTime
            
            if accumulatedTime >= delayTime then
                canGrab = false
                performGrab()
                lastGrabTime = currentTime
                task.delay(tonumber(LockInput.Text) or 1.2, function()
                    canGrab = true
                end)
                accumulatedTime = 0
            end
        end
    else
        accumulatedTime = 0
    end
end)

--- UI FUNCTIONALITY ---
TargetBtn.MouseButton1Click:Connect(function()
    if TargetMode == "All" then
        TargetMode = "Players"
        TargetBtn.Text = "Players & Npc"
    else
        TargetMode = "All"
        TargetBtn.Text = "Toys & Players & Npc"
    end
end)

local stealthPosStart = Vector2.new()
StealthBtn.MouseButton1Down:Connect(function()
    stealthPosStart = StealthBtn.AbsolutePosition
end)

StealthBtn.MouseButton1Up:Connect(function()
    local stealthPosEnd = StealthBtn.AbsolutePosition
    local dragDistance = (stealthPosStart - stealthPosEnd).Magnitude
    
    if dragDistance < 5 then
        MainFrame.Visible = true
        StealthBtn.Visible = false
    end
end)

local animating = false
local lastClickTime = 0
MinBtn.MouseButton1Click:Connect(function()
    local currentTime = tick()
    if currentTime - lastClickTime < 0.35 then
        MainFrame.Visible = false
        StealthBtn.Position = UDim2.new(0, MainFrame.AbsolutePosition.X + 145, 0, MainFrame.AbsolutePosition.Y + 15)
        StealthBtn.Visible = true
    else
        task.delay(0.36, function()
            if tick() - lastClickTime >= 0.35 and not animating then
                animating = true
                if MainFrame.Size.Y.Offset > 50 then
                    ContentFrame.Visible = false
                    MainFrame:TweenSize(UDim2.new(0, 160, 0, 30), "Out", "Quart", 0.3, true, function()
                        animating = false
                        MinBtn.Text = "+"
                    end)
                else
                    MinBtn.Text = "-"
                    MainFrame:TweenSize(UDim2.new(0, 160, 0, 330), "Out", "Back", 0.4, true, function()
                        MainFrame:TweenSize(UDim2.new(0, 160, 0, 320), "Out", "Quart", 0.1, true)
                        ContentFrame.Visible = true
                        animating = false
                    end)
                end
            end
        end)
    end
    lastClickTime = currentTime
end)

ToggleBtn.MouseButton1Click:Connect(function()
    active = not active
    canGrab = true
    accumulatedTime = 0
    ToggleBtn.Text = active and "ON" or "OFF"
    ToggleBtn.BackgroundColor3 = active and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(150, 0, 0)
end)
